double ldexp (double x, int exp);
Returns the result of multiplying x (the significand) by 2 raised to the power of exp (the exponent).

#include <math.h>

extern double exp();

double
ldexp(x, y)
double  x;
int y;
{
        if(y == 0) return 1.0 ;

        if(x == 0.0) return 0.0;

        if (x < 0)
        {
                x = -x;
                return -exp(log(x) * y);
        }

        return exp(log(x) * y);
}


